generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id          String       @id @default(uuid())
  user_id     String       @unique
  email       String       @unique
  tasks       Tasks[]
  habits      Habits[]
  cookieClock CookieClock?

  @@index([user_id])
}

model CookieClock {
  id                String @id @default(uuid())
  workDuration      Int
  restDuration      Int
  bigBreakFrequency Int
  bigBreakDuration  Int
  totalCycles       Int
  userId            String @unique
  user              Users  @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Habits {
  id            String       @id @default(uuid())
  title         String
  complete      Boolean      @default(false)
  creation_date DateTime     @default(now())
  recurrence    Recurrence
  user_id       String
  user          Users        @relation(fields: [user_id], references: [user_id])
  habit_steps   HabitSteps[]

  @@index([user_id])
}

model HabitSteps {
  id       String  @id @default(uuid())
  title    String
  complete Boolean @default(false)
  habit_id String
  habit    Habits  @relation(fields: [habit_id], references: [id])

  @@index([habit_id])
}

model Tasks {
  id            String       @id @default(uuid())
  title         String
  deleted       Boolean      @default(false)
  complete      Boolean      @default(false)
  creation_date DateTime     @default(now())
  due_date      String
  priority      TaskPriority @default(LOW)
  user_id       String
  start_time    DateTime?
  end_time      DateTime?
  user          Users        @relation(fields: [user_id], references: [user_id])
  steps         Steps[]

  @@index([user_id])
  @@index([due_date])
}

model Steps {
  id            String   @id @default(uuid())
  title         String
  deleted       Boolean  @default(false)
  complete      Boolean  @default(false)
  creation_date DateTime @default(now())
  taskId        String
  task          Tasks    @relation(fields: [taskId], references: [id])

  @@index([taskId])
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum Recurrence {
  DAILY
  WEEKLY
}
