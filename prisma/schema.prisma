// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum Recurrence {
  DAILY
  WEEKLY
}

model User {
  id       String  @id @default(uuid())
  // login id is from kinde auth. this links login with database
  login_id String  @unique
  email    String  @unique
  tasks    Task[]
  habits   Habit[]

  @@index([login_id])
}

model Habit {
  id            String      @id @default(uuid())
  title         String
  complete      Boolean     @default(false)
  creation_date DateTime    @default(now())
  recurrence    Recurrence
  user          User        @relation(fields: [user_id], references: [login_id])
  user_id       String
  habit_steps   HabitStep[]

  @@index([user_id])
}

model HabitStep {
  id       String  @id @default(uuid())
  title    String
  complete Boolean @default(false)
  habit    Habit   @relation(fields: [habit_id], references: [id])
  habit_id String

  @@index([habit_id])
}

model Task {
  id            String       @id @default(uuid())
  title         String
  deleted       Boolean      @default(false)
  complete      Boolean      @default(false)
  creation_date DateTime     @default(now())
  due_date      String?
  priority      TaskPriority @default(LOW)
  user          User         @relation(fields: [user_id], references: [login_id])
  user_id       String
  steps         Step[]

  @@index([user_id])
}

model Step {
  id            String   @id @default(uuid())
  title         String
  deleted       Boolean  @default(false)
  complete      Boolean  @default(false)
  creation_date DateTime @default(now())
  task          Task     @relation(fields: [taskId], references: [id])
  taskId        String

  @@index([taskId])
}
