// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum Recurrence {
  DAILY
  WEEKLY
}

model Users {
  id      String   @id @default(uuid())
  // login id is from kinde auth. this links login with database
  user_id String   @unique
  email   String   @unique
  tasks   Tasks[]
  habits  Habits[]

  @@index([user_id])
}

model Habits {
  id            String       @id @default(uuid())
  title         String
  complete      Boolean      @default(false)
  creation_date DateTime     @default(now())
  recurrence    Recurrence
  user          Users        @relation(fields: [user_id], references: [user_id])
  user_id       String
  habit_steps   HabitSteps[]

  @@index([user_id])
}

model HabitSteps {
  id       String  @id @default(uuid())
  title    String
  complete Boolean @default(false)
  habit    Habits  @relation(fields: [habit_id], references: [id])
  habit_id String

  @@index([habit_id])
}

model Tasks {
  id            String       @id @default(uuid())
  title         String
  deleted       Boolean      @default(false)
  complete      Boolean      @default(false)
  creation_date DateTime     @default(now())
  due_date      String
  priority      TaskPriority @default(LOW)
  user          Users        @relation(fields: [user_id], references: [user_id])
  user_id       String
  start_time    DateTime?
  end_time      DateTime?
  steps         Steps[]

  @@index([user_id])
  @@index([due_date])
}

model Steps {
  id            String   @id @default(uuid())
  title         String
  deleted       Boolean  @default(false)
  complete      Boolean  @default(false)
  creation_date DateTime @default(now())
  task          Tasks    @relation(fields: [taskId], references: [id])
  taskId        String

  @@index([taskId])
}
